---
import { marked } from 'marked';
import DOMPurify from 'dompurify';
import { JSDOM } from 'jsdom';

const { tldr } = Astro.props; // string with markdown from frontmatter
const window = new JSDOM('').window;
const purify = DOMPurify(window);
const rawHtml = marked.parse(tldr ?? '');
const safeHtml = purify.sanitize(rawHtml);
---
<div class="tldr" set:html={safeHtml} />

<style>
  .tldr { margin: 0; }
  .tldr :where(p){ margin: 0; display: inline; }
  .tldr :where(p) + :where(p){ display: inline; } /* collapse multiple paras inline */
</style>
